@model IEnumerable<Garage_2._0.Models.ParkingSpots>

@{
    ViewData["Title"] = "ParkingSpots";
}

<h1>ParkingSpots</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.License)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.License)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpotId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpotId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
